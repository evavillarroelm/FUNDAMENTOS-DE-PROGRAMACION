using namespace std;

int main()
{
    float a,b,c,x1,x2;
    cout <<"introduce a: "<<endl;
    cin>>a;
    cout <<"introduce b: "<<endl;
    cin>>b;
    cout <<"introduce c: "<<endl;
    cin>>c;

if (a!=0)
    {
        if(b*b-4*a*c>=0)
        {
            x1=(-b+sqrt(b*b-4*a*c)/(2*a));
            x2=(-b-sqrt(b*b-4*a*c)/(2*a));
          cout<<"las raises son:"<<x1<<"y"<<x2<<endl;
        }
        else
        cout <<"raises complejas"<<endl;
    }
    else
    cout<<"solo tiene una raÃ­z:"<<-c/b<<endl;
    
    system ("PAUSE");
    return 0;
}
